<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="club.pypzx.FootballSystem.dao.CupMapper">
	<resultMap id="BaseResultMap"
		type="club.pypzx.FootballSystem.entity.Cup">
		<!-- WARNING - @mbg.generated -->
		<id column="cup_id" property="cupId" jdbcType="VARCHAR" />
		<result column="cup_name" property="cupName" jdbcType="VARCHAR" />
		<result column="is_group" property="isGroup" jdbcType="INTEGER" />
	</resultMap>
	<delete id="deleteTeamByCup">
		DELETE FROM pypzx_team where cup_id = #{value}
	</delete>
	<update id="updateCupGrouped">
		UPDATE pypzx_cup SET is_group = 1
		WHERE cup_id=#{value}

	</update>
	<update id="updateCupNotGroup">
		UPDATE pypzx_cup SET is_group = 0 WHERE cup_id=#{value}
		

	</update>
</mapper>